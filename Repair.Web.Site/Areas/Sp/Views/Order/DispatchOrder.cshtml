@model Repair.Web.Site.Areas.Sp.Models.DispatchOrderQueryModel
@{
    Layout = null;
}
<form class="form-inline" action="@Url.Action("DispatchOrderToUser")" id="data-addUser" data-toggle="ajax-form" data-target="#data-addUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">派单</h4>
    </div>

    <div class="modal-body" style="height:auto;">
        @Html.HiddenFor(x => x.RepairOrderId)
        @foreach (var item in Model.UserList)
        {
            <div class="radio clear-top-5 clear-bottom-5" style="width:90px;">
                <label>
                    <input type="radio" name="ServiceUserId" value="@item.UserId">&nbsp;@item.RealName
                    <input type="hidden" name="UserName" value="@item.RealName">
                    <input type="hidden" name="UserPhone" value="@item.Phone">                  
                </label>
            </div>
        }

    </div>

    <div class="modal-footer">
        
        <button type="submit" class="btn btn-primary">提交</button>
        <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-default">取消</button>
    </div>
</form>