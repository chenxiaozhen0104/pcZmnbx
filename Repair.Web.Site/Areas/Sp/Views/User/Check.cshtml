@model dynamic

@{
    ViewBag.title1 = "用户管理";
    ViewBag.title2 = "用户审核";
    ViewBag.Title = "用户管理";
 
}
<form class="form-inline" action="@Url.Action("UserCheckList")" id="editFrm" data-toggle="ajax-form" data-target="#data-list">
    <div class="clear-bottom-15 clear-top-15 panel-body">
        <div class="pull-right">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">关键字</div>
                    <input name="keywords" id="input_text" placeholder="用户Id/姓名/手机号码" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-default">搜索</button>
        </div>
    </div>
    <div id="data-list">
        @Html.Action("UserCheckList")
    </div>
</form>
@section scripts{
    <script>
        function checkPassed(id, state) {
            AComfig("确定通过审核", function () {
                $.post(GetAjaxOptions('@Url.Action("CheckUser", "User")', { id: id,state:state, Reason:"" }));
            });
        }
        function checkUnPassed(id,state) {
            APrompt("请填写不通过的原因", function (noPassReason) {
                $.post(GetAjaxOptions('@Url.Action("CheckUser", "User")', { id: id,state:state ,Reason: noPassReason }));
            });
        }

    </script>
}
