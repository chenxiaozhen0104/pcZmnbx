@model LZY.BX.Model.CompanySginLog
@{
    ViewBag.Title = "申请成为业主单位";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .mainbo {
        width: 1190px;
        height: 600px;
        margin: 10px auto;
        border: 1px solid #dedede;
        padding: 10px 150px 10px 150px;
        border-radius: 5px;
    }

        .mainbo > p {
            color: rgb(18, 140, 233);
            font-size: 22px;
            font-family: '宋体 ';
            font-weight: bold;
            margin: 25px 0px 15px;
        }
</style>

<div class="form-horizontal mainbo">
    <p>申请信息</p>

    <div class="form-group">
        <label class="col-sm-2 control-label">单位名称</label>
        <div class="col-sm-6">
            <p class="form-control-static">@Model.Name</p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">单位地址</label>
        <div class="col-sm-6">
            <p class="form-control-static">@Model.Position</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">联系人</label>
        <div class="col-sm-6">
            <p class="form-control-static">@Model.Contact</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">联系电话</label>
        <div class="col-sm-6">
            <p class="form-control-static">@Model.Phone</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">审核状态</label>
        <div class="col-sm-6">
            <p class="form-control-static">@LZY.BX.Utilities.Comm.GetEnumDescription(Model.State, typeof(LZY.BX.Model.Enum.CompanySginState))</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">申请时间</label>
        <div class="col-sm-6">
            <p class="form-control-static">@Model.CreateTime</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @if (Model.State == "Passed")
            {
                <button type="button" name="submit" onclick="javascript:window.location.href = '/Author/Login'">重新登录</button>
            }
            else
            {
                <button type="button" name="submit" onclick="javascript:history.go(-1)">后退</button>
            }
        </div>
    </div>
</div>