@model List<LZY.BX.Model.User>
@{
    Layout = null;
    ViewBag.Title = "绑定用户";
}

<form class="form-inline" action="@Url.Action("AddUser")" id="data-addUser" data-toggle="ajax-form" data-target="#data-addUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">用户绑定</h4>
    </div>
    <div class="modal-body" style="height:auto;">
        <div class="clear-bottom-15 clear-top-15">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">关键字</div>
                    <input name="keywords" id="input_text" value="@Request["keywords"]" placeholder="用户Id/姓名/手机号码" class="form-control" />
                </div>
            </div>
            
                <button type="submit" class="btn btn-default">搜索</button>
          
           
        </div>
        <table class="table table-bordered table-hover">
            <tr>
                <td>用户ID</td>
                <td>姓名</td>
                <td>手机号码</td>
                <td>操作</td>
            </tr>
            @{
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.RealName</td>
                            <td>@item.Phone</td>
                            <td>
                               
                            <a href="@Url.Action("BindUser", new { userId = item.UserId })" data-toggle="confirm-request" data-title="绑定" data-content="确定绑定该用户吗？" data-target="#remoteDlg">绑定</a></td>
                        </tr>
                    }
                }
            }
        </table>
    </div>
</form>
