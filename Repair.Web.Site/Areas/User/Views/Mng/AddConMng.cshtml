@model List<LZY.BX.Model.ServiceCompany>
@{
    Layout = null;
    ViewBag.Title = "合作签约";
}

<form class="form-inline" action="@Url.Action("AddConMng")" id="data-addUser" data-toggle="ajax-form" data-target="#data-addUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">合作签约</h4>
    </div>
    <div class="modal-body" style="height:auto;">
        <div class="clear-bottom-15 clear-top-15">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">关键字</div>
                    <input name="keywords" id="input_text" value="@Request["keywords"]" placeholder="单位名称(支持模糊查询)" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-default">搜索</button>
        </div>
        <table class="table table-bordered table-hover">
            <tr>
                <td>单位Id</td>
                <td>单位名称</td>
                <td>联系人</td>
                <td>电话</td>
                <td>操作</td>
            </tr>
            @{
                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ServiceCompanyId</td>
                            <td>@item.Name</td>
                            <td>@item.Contact</td>
                            <td>@item.Phone</td>
                            <td><a href="@Url.Action("ApplyConMng", new { sid = item.ServiceCompanyId })" data-toggle="confirm-request" data-title="签约" data-content="确定与该单位签约吗？" data-target="#remoteDlg">签约</a></td>
                        </tr>
                    }
                }
            }
        </table>
    </div>
</form>
