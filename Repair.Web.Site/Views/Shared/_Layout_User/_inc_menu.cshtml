@{

    var user = User as Repair.Web.Site.Models.UserCookie;
}
<div>
    <div class="left-menu-first">

        <div class="left-menu-first-icon">
            <img src="~/Content/images/ico/head.png" />
        </div>
        @{
            if (User == null)
            {
                <div class="left-menu-first-info">
                    <p>昵称</p>
                    <p>所属单位</p>
                </div>
            }
            else
            {
                <div class="left-menu-first-info" style="width:100px;">
                    <p>@user.User.RealName</p>
                    @*<p>@user.UseCompany.Name</p>*@
                </div>
            }
}
        <div class="clearfix"></div>
    </div>

    <div class="left-menu">

        <div>
            <div><i class="glyphicon glyphicon-list-alt"></i>工单列表</div>
            <ul>
                <li><a href="/User/Order/Order">常规工单</a></li>
            </ul>
        </div>

        @if (user.User.RoleKey.HasFlag(LZY.BX.Model.Enum.UserType.UseCompanyUserAdmin))
        {
            <div>
                <div><i class="glyphicon glyphicon-user"></i>用户管理</div>
                <ul>
                    <li><a href="/User/User/Index">用户列表</a></li>
                </ul>
            </div>

            <div>
                <div><i class="glyphicon glyphicon-calendar"></i>合作单位</div>
                <ul>
                    <li><a href="/User/Mng/CopMng">合作单位列表</a></li>
                    <li><a href="/User/BindingService">服务绑定列表</a></li>
                </ul>
            </div>
            <div>
                <div><i class="glyphicon glyphicon-cog"></i>设备信息</div>
                <ul>
                    <li><a href="/User/Equipment/Equ">设备信息列表</a></li>
                </ul>
            </div>
            <div>
                <div><i class="glyphicon glyphicon-cog"></i>统计</div>
                <ul>
                    <li><a href="/User/Report/Dispatch">派单响应时间</a></li>
                    <li><a href="/User/Report/StartWork">工作响应时间</a></li>
                    <li><a href="/User/Report/Dervice">设备故障</a></li>
                </ul>
            </div>
        }
        
     
    </div>
</div>
