        </div>
    </div>
    <div class="login-center">
        <div class="login-centerContent">
            <img src="~/Static/images/login-img.png" />

            <!--手机号码注册-->
            <div class="register-centerForm">
                <ul class="login-centerTitle">
                    <li class="login-liCommon login-active">手机号码注册</li>
                </ul>
                <div class="login-centerInput register-centerInput">
                    <div class="login-inpuRow">
                        <span class="login-incon login-inconActice"><i class="iconfont icon-yonghuming"></i></span>
                        <input class="login-input" type="text" placeholder="用户真实姓名" v-model="userName" />
                    </div>

                    <div class="login-inpuRow">
                        <span class="login-incon"><i class="iconfont icon-shouji"></i></span>
                        <input class="login-input longin-focus" id="phoneBlur"  type="text" placeholder="手机号码" v-model="regPhone"  v-on:input="regAlter"/>
                    </div>
                    <div class="login-inpuRow">
                        <input class="login-input login-code" type="text" placeholder="验证码" v-model="regCode" />
                        <btn-verify-code v-bind:verify-user="true" v-bind:mobile="regPhone"></btn-verify-code>
                    </div>

                    <div class="login-inpuRow">
                        <span class="login-incon"><i class="iconfont icon-mima"></i></span>
                        <input class="login-input longin-focus" id="passwordBlur"  type="password" placeholder="请输入不小于6位的登录密码" v-model="regPassword" v-on:input="homeAlter('passwordBlur')"/>
                    </div>
                    <div class="login-inpuRow">
                        <span class="login-incon"><i class="iconfont icon-mima"></i></span>
                        <input class="login-input longin-focus"  type="password" placeholder="重复密码" v-model="regAgainPassword" />
                    </div>
                    <div class="login-row register-del">
                        <label><input type="checkbox" class="register-checkbox2" v-model="regChecked" /> 我已阅读并接受<<</label>
                        <a class="register-agreen" href="###">啄木鸟报修服务协议</a>>>
                    </div>

                    <div class="login-row">
                        <button class="login-submit" v-on:click="register">注册</button>
                    </div>
                    <div class="login-row register-backLogin">
                        <p>已有账号？<a class="register-backLogins" href="/Home/Login">直接登录</a></p>
                    </div>
                </div>
