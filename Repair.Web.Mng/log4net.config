<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <!--log4net-->
  <log4net>
    <root>
      <!--OFF > FATAL > ERROR > WARN > INFO > DEBUG  > ALL-->
      <level value="ALL" />
      
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="DebugAppender"  />
      <appender-ref ref="InfoAppender"  />
      <appender-ref ref="ErrorAppender"  />
      <appender-ref ref="FatalAppender" />
      <appender-ref ref="WarnAppender" />
    </root>
    <!--ConsoleAppender-->
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <!--OFF > FATAL > ERROR > WARN > INFO > DEBUG  > ALL-->
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
    </appender>
    <!--Debug-->
    <appender name="DebugAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Loger\\Repair.Web\\Debug\\DebugFileAppender.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Size" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level -%class.%method -%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Debug" />
        <levelMax value="Debug" />
      </filter>
    </appender>
    <!--Info-->
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Loger\\Repair.Web.Mng\\Info\\InfoFileAppender.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Size" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level -%class.%method -%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Info" />
        <levelMax value="Info" />
      </filter>
    </appender>
    <!--Error-->
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Loger\\Repair.Web.Mng\\Error\\ErrorFileAppender.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Size" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level -%class.%method -%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Error" />
        <levelMax value="Error" />
      </filter>
    </appender>
    <!--Fatal-->
    <appender name="FatalAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Loger\\Repair.Web.Mng\\Fatal\\FatalFileAppender.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Size" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level -%class.%method -%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Fatal" />
        <levelMax value="Fatal" />
      </filter>
    </appender>
    <!--Warn-->
    <appender name="WarnAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\\Loger\\Repair.Web.Mng\\Warn\\WarnFileAppender.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Size" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %logger %-5level -%class.%method -%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="Warn" />
        <levelMax value="Warn" />
      </filter>
    </appender>
  </log4net>

</configuration>
